<!DOCTYPE html>
<html>
  <head>
    <title><%=funcionarios%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>Funcionarios</header>
    <div class="col-xs-12">
            <form action="/funcionarios" method="post" role="form">
                <div class="row">
                    <div class="col-xs-4">
                        <input type="text" name="cpf" placeholder="CPF" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                        <input type="text" name="nome" placeholder="Nome" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                      <input type="text" name="cep" placeholder="CEP" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                      <input type="text" name="email" placeholder="E-mail" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                      <input type="text" name="telefone" placeholder="Telefone" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                      <input type="text" name="funcao" placeholder="Funcao" class="form-control"/>
                   </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-default">Incluir</button>
                    </div>
                </div>
            </form>
    </div>
    <table class="table table-bordered table-striped">
      <thead><tr>
          <th>CPF</th>
          <th>Nome</th>
          <th>CEP</th>
          <th>EMAIL</th>
          <th>FONE</th>
          <th>FUNCAO</th>
      </tr>
      </thead>
      
      <tbody>
          <% funcionarios.forEach(function(funcionario, index ) { %>
            <tr>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>"><%- funcionario.cpf %></a></td>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>" ><%- funcionario.nome %></a></td>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>" ><%- funcionario.cep %></a></td>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>" ><%- funcionario.email %></a></td>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>" ><%- funcionario.telefone %></a></td>
              <td><a href="/funcionarios/editar/<%=funcionario._id%>" ><%- funcionario.funcao %></a></td>  
              <td><a href="/funcionarios/delete/<%=funcionario._id%>" onclick="return confirm('Tem certeza que deseja excluir?');">X</a></td>                  
            </tr>
          <% }) %>
      </tbody>
  </table>

  </body>
</html>