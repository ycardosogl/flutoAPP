<!DOCTYPE html>
<html>
  <head>
    <title><%=clientes%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="col-xs-12">
      <form action="/clientes" method="post" role="form">
          <div class="row">
              <div class="col-xs-4">
                  <input type="text" name="cpf" placeholder="CPF" class="form-control"/>
              </div>
              <div class="col-xs-4">
                  <input type="text" name="nome" placeholder="Nome" class="form-control"/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="cep" placeholder="CEP" class="form-control"/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="email" placeholder="E-mail" class="form-control"/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="telefone" placeholder="Telefone" class="form-control"/>
              </div>
              <div class="col-xs-4">
                  <button type="submit" class="btn btn-default">Incluir</button>
              </div>

          </div>
      </form>
</div>

    <table class="table table-bordered table-striped">
      <thead><tr>
          <th>CPF</th>
          <th>Nome</th>
          <th>CEP</th>
          <th>EMAIL</th>
          <th>FONE</th>
      </tr>
      </thead>
      
      <tbody>
          <% clientes.forEach(function(cliente, index ) { %>
            <tr>
              <td><%- cliente.cpf %></td>
              <td><%- cliente.nome %></td>
              <td><%- cliente.cep %></td>
              <td><%- cliente.email %></td>
              <td><%- cliente.telefone %></td>
              <td><%- cliente.funcao %></td>   
              <td><a href="/clientes/delete/<%=cliente._id%>" onclick="return confirm('Tem certeza que deseja excluir?');">X</a></td> 
            </tr>
          <% }) %>
      </tbody>
      
      
  </table>

  </body>
</html>